<aside id="{{ post.id }}" class="flex mr-4 items-center mt-10" {{ attributes }}>
    {% if app.user %}
        {% if isLiked %}
            <a title="Undo Like" class="cursor-pointer" data-action="live#action" data-action-name="undoLike">{{ component('LikeIconComponent', {class:'fill-green-500 hover:stroke-cyan-700'}) }}</a>
        {% elseif(isDisliked) %}
            <a title="You disliked this" class="ml-2 mr-1">{{ component('LikeIconComponent', {class:'fill-green-300'}) }}</a>
        {% else %}
            <a title="Like" class="cursor-pointer" data-action="live#action" data-action-name="like">{{ component('LikeIconComponent', {class:'fill-green-500 hover:stroke-cyan-700'}) }}</a>
        {% endif %}
        <span class="text-lg mr-1 ml-1">({{ post.usersThatLiked|length }})</span>

        {% if isDisliked ?? false %}
            <a title="Undo dislike" class="ml-4 cursor-pointer" data-action="live#action" data-action-name="undoDislike">{{ component('UnlikeIconComponent', {class:'fill-red-500 hover:stroke-cyan-700 rotate-180'}) }}</a>
        {% elseif(isLiked ?? fasle) %}
            <a title="You like this post" class="ml-2 mr-1">{{ component('LikeIconComponent', {class:'fill-green-300'}) }}</a>
        {% else %}
            <a title="Dislike" class="ml-4 cursor-pointer" data-action="live#action" data-action-name="dislike">{{ component('UnlikeIconComponent', {class:'fill-red-500 hover:stroke-cyan-700 rotate-180'}) }}</a>
        {% endif %}

        <span class="text-lg mr-1 ml-1">({{ post.usersThatDontLike|length }})</span>
    {% else %}
        <a title="login to like" href="#" class="pointer-events-none">{{ component('LikeIconComponent', {class:'fill-green-500 hover:stroke-cyan-700'}) }}</a>
        <span class="text-lg mr-1 ml-1">(13)</span>
        <span>Login to like</span>
        <a title="login to dislike" href="#" class="pointer-events-none ml-2">{{ component('UnlikeIconComponent', {class:'fill-red-500 hover:stroke-cyan-700 rotate-180'}) }}</a>
        <span class="text-lg mr-1 ml-1">(4)</span>
        <span>Login to dislike</span>
    {% endif %}
</aside>