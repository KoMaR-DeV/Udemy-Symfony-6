<section>
    <header>
        <h2 class="text-lg font-medium text-gray-900">Profile Information</h2>
        <p class="mt-1 text-sm text-gray-600">Update your account's profile information adn email address.</p>
    </header>
    <form action="{{ path('app_profile') }}" method="POST" class="mt-6 space-y-6">
        <fieldset>
            <label for="name" class="block font-medium text-sm text-gray-700">Name</label>
            <input type="text" name="name" id="name" class="mt-1 block w-full p-1 border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 rounded-md shadow-sm" value="old value" autofocus autocomplete="name" readonly>
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                <li>message</li>
            </ul>
        </fieldset>
        <fieldset>
            <label for="email" class="block font-medium text-sm text-gray-700">Email</label>
            <input type="email" name="email" id="email" class="mt-1 block w-full p-1 border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 rounded-md shadow-sm" value="old value" autofocus autocomplete="email" readonly>
            <ul class="mt-2 text-sm text-red-600 space-y-1">
                <li>message</li>
            </ul>
        </fieldset>
        <fieldset class="flex items-center gap-4">
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-gray-800 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 focus:bg-gray-700 active:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition ease-in-out duration-150">Save</button>
            <p class="text-sm text-gray-600">Saved</p>
        </fieldset>
    </form>
</section>