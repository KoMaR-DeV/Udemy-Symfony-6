{% extends 'base.html.twig' %}

{% block title %}Edit post - Symfony Micro Blog{% endblock %}

{% block body %}
    <section class="my-14">
        <h2 class="text-4xl">Edit blog post</h2>
        <div class="w-full">
            <form action="{{ path('posts.edit', {id:1}) }}" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <fieldset class="mb-6">
                    <label for="post-title" class="block text-gray-700 font-bold mb-2">Post title</label>
                    <input type="text" name="title" id="post-title" value="post title" class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-2 leading-tight focus:outline-none focus:shadow-outline" required>
                    <p class="text-red-500 text-xs italic">Error message</p>
                </fieldset>
                <fieldset class="mb-6">
                    <label for="post-content" class="block text-gray-700 font-bold mb-2">Post content</label>
                    <textarea name="content" id="post-content" class="drop-shadow-lg w-full h-60 border p-0.5 border-red-500 focus:outline-none focus:shadow-outline" required>
                        post content
                    </textarea>
                    <p class="text-red-500 text-xs italic">Error message</p>
                </fieldset>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer">Save post</button>
            </form>
        </div>
    </section>
{% endblock %}