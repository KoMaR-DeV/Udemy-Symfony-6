{% extends 'base.html.twig' %}

{% block title %}All posts - Symfony Micro Blog{% endblock %}

{% block body %}

    {# latest posts #}
    <section class="my-16">
        <h2 class="text-6xl tracking-widest font-bold mb-6">{% trans %}Latest posts{% endtrans %}: {{ user ?? '' }}</h2>
        <p class="mb-8 text-gray-500">{% trans %}A blog created with Symfony and Tailwind CSS{% endtrans %}</p>
        <hr>
    </section>

    {# posts #}
    {% for post in posts %}

        {{ component('PostComponent', {post: post}) }}

    {% endfor %}

    <aside class="my-16">
        {{ knp_pagination_render(posts) }}
    </aside>

{% endblock %}