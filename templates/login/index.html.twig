{% extends 'base.html.twig' %}

{% block title %}Hello - Symfony Micro Blog{% endblock %}

{% block body %}
    <section class="m-auto text-center">
        <div class="py-12 border-gray-200">
            <h2 class="text-6xl pt-12 pb-8">{% trans %}Login{% endtrans %}</h2>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="POST">
                <fieldset class="mb-6">
                    <label for="username" class="block text-gray-600 required">Email</label>
                    <input type="email" id="username" name="_username" value="{{ last_username }}" class="border rounded-md p-1">
                </fieldset>

                <fieldset class="mb-6">
                    <label for="password" class="block text-gray-600 required">Password</label>
                    <input type="password" id="password" name="_password" class="border rounded-md p-1">
                </fieldset>

                {# If you want tp control the URL the user is redirected to on succes <input type="hidden" name="_target_path" value="/account"> #}

                <button type="submit" class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg w-1/6 font-extrabold py-4 px-4 rounded-3xl">{% trans %}Login{% endtrans %}</button>
            </form>
        </div>
    </section>
{% endblock %}
