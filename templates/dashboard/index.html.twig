{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <section class="py-12 mt-10">
        <div class="max-w-7xl mx-auto sm:pc-6 lg:px-8">
            <div class="p-6 text-gray-900">
                <span>You're logged in!</span>
                <a href="{{ path('app_profile') }}" class="hover:text-stone-500">Profile</a>
                <div class="mt-6">
                    <div class="flex mx-2 mb-4 space-x-4 text-xl border-b border-gray-300">
                        <div class="hover:text-indigo-600 py-2 cursor-pointer">Followers</div>
                        <div class="hover:text-indigo-600 py-2 pl-2 cursor-pointer">Following</div>
                        <div class="hover:text-indigo-600 py-2 pl-2 cursor-pointer">Liked Posts</div>
                    </div>
                    <div>
                        <b>People that follow you:</b>
                        <ul class="m-1">
                            <li>
                                <a href="{{ path('posts.index') }}">John Smith</a>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <b>People that you follow:</b>
                        <ul class="m-1">
                            <li>
                                <a href="{{ path('posts.user', {id:1}) }}" class="hover:text-stone-500">Jane Doe</a>
                                <a href="{{ path('toggleFollow', {user:1}) }}" class="ml3 inline font-bold text-sm px-4 py-1 text-white rounded bg-blue-500 hover:bg-blue-600">Unfollow</a>
                            </li>
                        </ul>
                    </div>
                    <div>
                        <b>Posts you liked:</b>
                        <ul class="m-1">
                            <li>
                                <a href="{{ path('posts.show', {id:1}) }}" class="hover:text-stone-500">Liked post title</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
